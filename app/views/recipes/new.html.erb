<h1>New recipe</h1>
<%= form_with model: @recipe, url: '/recipes', method: :post do |f| %>
  <div>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :preparation_time %><br>
    <%= f.number_field :preparation_time %>
  </div>
  <div>
    <%= f.label :cooking_time %><br>
    <%= f.number_field :cooking_time %>
  </div>
  <div>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.check_box :public %>
    <%= f.label :public, "Public" %>
  </div>
  <%= f.submit "Create Post" %>
<% end %>